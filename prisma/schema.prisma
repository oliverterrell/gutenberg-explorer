generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [citext]
}

model User {
  id         String  @id @default(uuid()) @db.Uuid
  email      String  @unique @db.Citext
  password   String? @db.VarChar(255)
  firstName  String? @map("first_name")
  lastName   String? @map("last_name")
  phone      String? @unique
  preference Json    @default("{}")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([email])
  @@index([phone])
  @@map("user")
}

model AiModel {
  id       String @id @default(uuid()) @db.Uuid
  model    String @unique
  name     String
  provider String
  class    String

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([model])
  @@map("ai_model")
}

model Book {
  id           String   @id @default(uuid()) @db.Uuid
  gutenbergId  Int      @unique @map("gutenberg_id")
  title        String
  eBookUrl     String?  @map("e_book_url")
  coverArtUrl  String?  @map("cover_art_url")
  plainTextUrl String?  @map("plain_text_url")
  subjects     String[] @default([])
  authors      String[] @default([])
  translators  String[] @default([])
  languages    String[] @default([])
  bookshelves  String[] @default([])
  copyright    Boolean?
  summaries    String[] @default([])

  @@index([gutenbergId])
  @@map("book")
}
